<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
        <TextView
                android:id="@+id/txtNameMotel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:ellipsize="end"
                android:singleLine="true"
                android:textColor="#d4792f"
                android:textSize="12sp"
                android:textStyle="bold"/>
          <View
		    android:layout_width="fill_parent"
		    android:layout_height="0.5dp"
		    android:background="#ffa55c"/>
			<RatingBar 
		        android:id="@+id/motel_rating_detail_map"
		        android:layout_width="wrap_content"
	        	android:layout_height="wrap_content"
	        	style="@style/CustomRatingBar_black_white"
	        	android:layout_margin="2dp"
	        	android:layout_gravity="center"
	        	android:numStars="5"
	        	android:stepSize="1.0"
	        	android:rating="0.0"/>         

        <TextView
                android:paddingTop="2dp"
                android:id="@+id/txtDescriptionMotel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:textColor="#ff7f7f7f"
                android:textSize="12sp"

                android:layout_gravity="center_horizontal"
                />
             <View
		    android:layout_width="fill_parent"
		    android:layout_height="0.3dp"
		    android:background="#cecece"
		    android:layout_margin="4dp"/>
                <TextView
                android:id="@+id/popupDetail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:singleLine="true"
                android:textColor="#e18031"
                android:textStyle="bold"
                android:textSize="10dp"
                android:text="@string/click_para_ver_detalles"
                android:layout_gravity="center_horizontal"

                />
    </LinearLayout>

